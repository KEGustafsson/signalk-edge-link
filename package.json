{
  "name": "signalk-edge-link",
  "version": "1.0.1",
  "description": "SignalK Edge Link. Secure UDP link for data exchange.",
  "main": "index.js",
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-network",
    "signalk-webapp",
    "signalk-category-utility",
    "signalk-plugin-configurator"
  ],
  "signalk": {
    "appIcon": "./icons/icon-72x72.png",
    "displayName": "Edge Link Configuration"
  },
  "signalk-plugin-enabled-by-default": false,
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.0.0",
    "@rjsf/core": "^5.18.4",
    "@rjsf/utils": "^5.18.4",
    "@rjsf/validator-ajv8": "^5.18.4",
    "@signalk/server-admin-ui-dependencies": "1.0.1",
    "ping-monitor": "^0.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4"
  },
  "author": "Karl-Erik Gustafsson",
  "repository": "https://github.com/KEGustafsson/signalk-edge-link",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!webpack.config.js",
      "!.eslintrc.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/"
    ]
  }
}
